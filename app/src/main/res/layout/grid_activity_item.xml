        android:inputType="text"
        android:maxLines="1"
        android:lines="1"
        android:textColor="@color/black"
        android:id="@+id/tv_activity_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"
        tools:text="Lunes">
